<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetActivity">
    <ImageView
    android:id="@+id/logo"
    android:layout_width="90dp"
    android:layout_height="90dp"
    android:src="@drawable/logomeenotkom"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="60dp"
    />
    <TextView
        android:id="@+id/forgot_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo"
        android:layout_marginTop="35dp"
        android:text="Forgot Password"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/data_text"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Please enter the email address you used to register on the app"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/forgot_password_text"
        android:textSize="16sp"
        android:layout_marginTop="15dp"/>
    <EditText
        android:id="@+id/email_edittext"
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:background="@drawable/edit"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:hint="E-Mail"
        android:inputType="textEmailAddress"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/data_text"
        android:padding="10dp"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/confirm_btn"
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:background="@drawable/editt"
        android:text="Confirm Email"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:padding="0dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/email_edittext"
        android:layout_marginTop="35dp"
        android:textAllCaps="false"/>
    <TextView
        android:id="@+id/back_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Back"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#F40057"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/confirm_btn"
        android:layout_marginTop="30dp"/>
</RelativeLayout>