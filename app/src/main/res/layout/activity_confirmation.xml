<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmationActivity">
<TextView
    android:id="@+id/verification_text"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="VERIFICATION"
    android:textColor="@android:color/black"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="150dp"
    android:textSize="20sp"
    android:textStyle="bold"
    />
    <TextView
        android:id="@+id/data_text"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="Please enter the OTP code sent on your Email Address to verify yourself."
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/verification_text"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_margin="15dp"
        />
    <EditText
        android:id="@+id/first_index"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:background="@drawable/edit"
        android:layout_below="@+id/data_text"
        android:padding="10dp"
        android:inputType="number"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="45dp"/>
    <EditText
        android:id="@+id/second_index"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:background="@drawable/edit"
        android:layout_below="@+id/data_text"
        android:layout_toRightOf="@+id/first_index"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:inputType="number"
        android:layout_marginTop="45dp"/>
    <EditText
        android:id="@+id/third_index"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:background="@drawable/edit"
        android:layout_below="@+id/data_text"
        android:layout_toRightOf="@+id/second_index"
        android:padding="10dp"
        android:inputType="number"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="45dp"/>
    <EditText
        android:id="@+id/fourth_index"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:background="@drawable/edit"
        android:layout_below="@+id/data_text"
        android:padding="10dp"
        android:inputType="number"
        android:layout_toRightOf="@+id/third_index"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="45dp"/>
    <Button
        android:id="@+id/confirm_btn"
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:background="@drawable/editt"
        android:text="Verify"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:padding="0dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/fourth_index"
        android:layout_marginTop="50dp"
        android:textAllCaps="false"/>
</RelativeLayout>