<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/all_rel"
    tools:context=".HomeActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Moonetkom"
            app:titleTextColor="@android:color/black"
            app:titleTextAppearance="@style/TextAppearance.AppCompat.Medium"
            app:navigationIcon="@drawable/ic_menu"
            android:background="@android:color/white"/>
    </com.google.android.material.appbar.AppBarLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:id="@+id/scrolls"
    >
<RelativeLayout
    android:id="@+id/all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <ImageView
        android:id="@+id/shop_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/mainscreen_post"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        />

  <TextView
      android:id="@+id/category_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Categories"
      android:textStyle="bold"
      android:layout_marginLeft="28dp"
      android:textSize="18sp"
      android:textColor="@android:color/black"
      android:layout_below="@+id/shop_now"
      android:layout_marginTop="-35dp"/>
    <Button
        android:id="@+id/view_all_category"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:background="@drawable/editt"
        android:layout_toRightOf="@id/category_text"
        android:layout_below="@+id/shop_now"
        android:layout_marginTop="-39dp"
        android:layout_marginLeft="170dp"
        android:textColor="@android:color/white"
        android:text="View All"
        android:textAllCaps="false"
        />
    <ImageView
        android:id="@+id/bakery"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/category_text"
        android:src="@drawable/bakery"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="28dp"/>
    <ImageView
        android:id="@+id/fruits"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/category_text"
        android:src="@drawable/fruits"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/bakery"
        android:layout_marginTop="28dp"/>
    <ImageView
        android:id="@+id/vegetables"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/category_text"
        android:src="@drawable/vegetables"
        android:layout_toRightOf="@+id/fruits"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="28dp"/>
    <ImageView
        android:id="@+id/drinks"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/category_text"
        android:src="@drawable/drinks"
        android:layout_toRightOf="@+id/vegetables"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="28dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bakery"
        android:text="Bakery"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fruits"
        android:text="Fruits"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vegetables"
        android:text="Vegetables"
        android:layout_marginLeft="212dp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/drinks_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bakery"
        android:text="Drinks"
        android:layout_marginLeft="316dp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"/>
    <ImageView
        android:id="@+id/e3lan"
        android:layout_width="380dp"
        android:layout_centerHorizontal="true"
        android:layout_height="100dp"
        android:src="@drawable/sw"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/drinks_text"/>
    <TextView
        android:id="@+id/top_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top products"
        android:textStyle="bold"
        android:layout_marginLeft="28dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/e3lan"
        android:layout_marginTop="5dp"/>

    <Button
        android:id="@+id/view_all_product"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:background="@drawable/editt"
        android:layout_toRightOf="@id/top_text"
        android:layout_below="@+id/e3lan"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="152dp"
        android:textColor="@android:color/white"
        android:text="View All"
        android:textAllCaps="false"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_below="@+id/view_all_product"
       >

    </androidx.recyclerview.widget.RecyclerView>
    <ImageView
        android:id="@+id/fb_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/facebook_icon"
        android:layout_marginLeft="150dp"
        android:layout_below="@+id/recycler_view"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="40dp"/>
    <ImageView
        android:id="@+id/sb_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/snapchat_icon"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/fb_icon"
        android:layout_below="@+id/recycler_view"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="40dp"/>
    <ImageView
        android:id="@+id/insta_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/instagram_icon"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/sb_icon"
        android:layout_below="@+id/recycler_view"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="40dp"/>
</RelativeLayout>
</ScrollView>



   </RelativeLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/my_navigation_items"
        >

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="16dp">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="bottom"
                android:src="@drawable/signouticon"
                />

        <TextView
        android:id="@+id/signout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginLeft="25dp"
        android:text="Sign Out" />
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>
