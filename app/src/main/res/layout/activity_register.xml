<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">
    <ImageView
        android:id="@+id/logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/logomeenotkom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        />
    <TextView
        android:id="@+id/register_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logo"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:textSize="16sp"
        />
    <EditText
        android:id="@+id/email_edittext"
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:background="@drawable/edit"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:hint="E-Mail"
        android:inputType="textEmailAddress"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/register_text"
        android:padding="10dp"
        android:layout_marginTop="40dp"/>
    <EditText
        android:id="@+id/password_edittext"
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:background="@drawable/edit"
        android:drawableLeft="@drawable/ic_lock"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:padding="10dp"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/email_edittext"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/re_password_edittext"
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:background="@drawable/edit"
        android:drawableLeft="@drawable/ic_lock"
        android:drawablePadding="10dp"
        android:hint="Confirm Password"
        android:padding="10dp"
        android:inputType="textPassword"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/password_edittext"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/phone_edittext"
        android:layout_width="360dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:background="@drawable/edit"
        android:drawableLeft="@drawable/ic_phone"
        android:drawablePadding="10dp"
        android:hint="Phone"
        android:padding="10dp"
        android:inputType="phone"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/re_password_edittext"
        android:layout_marginTop="20dp"/>
    <Button
        android:id="@+id/reg_btn"
        android:layout_width="330dp"
        android:layout_height="55dp"
        android:background="@drawable/editt"
        android:text="Register"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:padding="0dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/phone_edittext"
        android:layout_marginTop="35dp"
        android:textAllCaps="false"/>
    <TextView
        android:id="@+id/back_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Back"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#F40057"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/reg_btn"
        android:layout_marginTop="30dp"/>
</RelativeLayout>